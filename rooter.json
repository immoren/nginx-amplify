{
  "jpsVersion": "0.3",
  "jpsType": "update",
  "build": "20170704",
  "application": {
    "id": "Rooter",
    "name": "Rooter",
    "version": "latest",
    "categories": [
      "apps/dev-and-admin-tools"
    ],
    "logo": "https://owncloud.sylvesteri.fi/owncloud/s/xrgXJNLXZPWe2JI/download",
    "description": {
      "text": "This creates user with root rights to selected environment app server nodes"
    },
    "onInstall": {
        "executeShellCommands": [
          {
            "nodeGroup": "cp",
            "commands": [
              "useradd --comment \"rooter\" -m rooter",
              "echo rooter:${globals.password} | chpasswd",
              "usermod -aG wheel rooter"
            ],
            "user": "root"
          }
        ]
    },
    "success": {
      "text": {
        "en": "Addon was applied"
        },
        "text": "Addon was applied to ${env.url}<br>username: rooter<br>password: ${globals.password}",
        "email": "Addon was applied to ${env.url}<br>username: rooter<br>password: ${globals.password}"
    },
    "globals": {
        "password": "${user.appPassword}"
      }
  }
}
